package mayar;

/**
 *
 * @author user
 */
public class Products {
    
    String name;
    float price;
    int quantity;
    boolean shippable ;
    boolean ex;
    


public Products(String name,float price, int quantity ,boolean shippable ,boolean ex){
this.name=name;
this.price =price;
this.quantity = quantity;
this.shippable = shippable;
this.ex = ex;
}

public String getname(){ return name;}
public float getprice(){
    return price;
}
public int getquantity(){
    return quantity;
}
public boolean getshippable(){
    return shippable;
}
public boolean getex(){
    return ex;
}

// here to minus the stock
public void red_quantity (int amount){
    this.quantity -= amount;
}


}
